<Page
    x:Class="Chromass.ChroZenPump.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Chromass.ChroZenPump.UI.Views"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            x:Uid="Main_Title"
            Style="{StaticResource PageTitleStyle}" 
            Visibility="{x:Bind ViewModel.APIViewModel.IsConnected, Mode=OneWay}"/>

        <local:ConnectionPage Grid.Row="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              ViewModel="{x:Bind ViewModel.APIViewModel.ConnectionViewModel}"
                              Visibility="{x:Bind ViewModel.APIViewModel.ConnectionViewModel.IsVisible, Mode=OneWay}">
            
        </local:ConnectionPage>

        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</Page>
